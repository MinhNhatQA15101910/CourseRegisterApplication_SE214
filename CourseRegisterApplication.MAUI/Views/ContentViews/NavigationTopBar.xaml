<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  x:Class="CourseRegisterApplication.MAUI.Views.ContentViews.NavigationTopBar"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Name="this"
  BindingContext="{x:Reference this}">
  <Grid
    BackgroundColor="#FCFAFA"
    ColumnDefinitions="Auto,*,Auto"
    HeightRequest="80">
    <HorizontalStackLayout IsVisible="{Binding IsBackVisible}" VerticalOptions="Center">
      <Image
        Margin="24,0,0,0"
        HeightRequest="16"
        Source="vector_left.png" />
      <Label
        Margin="16,0,0,0"
        FontFamily="RobotoMedium"
        Text="Back" />
    </HorizontalStackLayout>
    <StackLayout
      Grid.Column="1"
      Margin="100,0,0,0"
      IsVisible="{Binding IsTitleVisible}"
      VerticalOptions="Center">
      <Label FontFamily="RobotoMedium" Text="{Binding Title, FallbackValue='Card description text.'}" />
      <Label Text="{Binding Description, FallbackValue='Card description text.'}" />
    </StackLayout>
    <HorizontalStackLayout
      Grid.Column="2"
      HorizontalOptions="End"
      IsVisible="{Binding IsControlVisible}">
      <Image
        Margin="0,0,40,0"
        HeightRequest="28"
        Source="bell_notification.png" />
      <Image
        Margin="0,0,60,0"
        HeightRequest="24"
        Source="setting.png" />
    </HorizontalStackLayout>
  </Grid>
</ContentView>
